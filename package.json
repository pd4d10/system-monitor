{
  "name": "system-monitor",
  "version": "1.5.1",
  "displayName": "System Monitor",
  "description": "Monitor system status like CPU, memory, battery",
  "homepage": "https://github.com/pd4d10/system-monitor",
  "manifest": {
    "offline_enabled": true,
    "permissions": [
      "system.cpu",
      "system.memory",
      "system.storage",
      "storage"
    ]
  },
  "private": true,
  "scripts": {
    "dev": "plasmo dev --target=firefox-mv2",
    "build": "plasmo build --target=firefox-mv2",
    "icon": "node scripts/icon.js"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@rescript/react": "^0.11.0",
    "plasmo": "^0.60.2",
    "postcss": "^8.4.20",
    "rescript": "^10.1.0",
    "rescript-webapi": "^0.7.0",
    "tailwindcss": "^3.2.4"
  }
}
