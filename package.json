{
  "name": "system-monitor",
  "displayName": "System Monitor",
  "version": "1.5.1",
  "private": true,
  "description": "Monitor system status like CPU, memory, battery",
  "homepage": "https://github.com/pd4d10/system-monitor",
  "scripts": {
    "build": "plasmo build --target=firefox-mv2",
    "dev": "plasmo dev --target=firefox-mv2",
    "icon": "node scripts/icon.js"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.243",
    "@types/react": "^18.2.20",
    "@types/react-dom": "^18.2.7",
    "plasmo": "^0.82.0",
    "postcss": "^8.4.31",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwindcss": "^3.3.3",
    "typescript": "^5.1.6"
  },
  "packageManager": "pnpm@7.20.0",
  "manifest": {
    "offline_enabled": true,
    "permissions": [
      "system.cpu",
      "system.memory",
      "system.storage",
      "storage"
    ]
  }
}
