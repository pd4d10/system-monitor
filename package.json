{
  "name": "system-monitor",
  "version": "1.5.1",
  "displayName": "System Monitor",
  "description": "Monitor system status like CPU, memory, battery",
  "homepage": "https://github.com/pd4d10/system-monitor",
  "manifest": {
    "offline_enabled": true,
    "permissions": [
      "system.cpu",
      "system.memory",
      "system.storage",
      "storage"
    ]
  },
  "private": true,
  "scripts": {
    "dev": "plasmo dev --target=firefox-mv2",
    "build": "plasmo build --target=firefox-mv2",
    "icon": "node scripts/icon.js"
  },
  "dependencies": {
    "@types/offscreencanvas": "^2019.7.0",
    "@types/react": "^18.0.26",
    "@types/react-dom": "^18.0.10",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "plasmo": "^0.60.2",
    "postcss": "^8.4.20",
    "tailwindcss": "^3.2.4"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  }
}
